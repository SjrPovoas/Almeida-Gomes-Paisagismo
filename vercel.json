{
  "redirects": [
    {
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "almeidagomespaisagismo.vercel.app" // Corrigido (sem 'www.')
        }
      ],
      "destination": "https://almeidagomespaisagismo.com.br/:path*", // Corrigido o destination para passar o caminho adiante
      "permanent": true
    },
    {
      "source": "/index.html",
      "destination": "/",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/sitemap.xml",
      "destination": "/sitemap.xml"
    },
    {
      "source": "/robots.txt",
      "destination": "/robots.txt"
    },
    {
        "source": "/:path*",
        "destination": "/" 
    }
  ]
}